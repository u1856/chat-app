  <div class="chat-botton">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="messages">

  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        リラックマ
      </div>
      <div class="message-date">
        2022/6/24(Wed) 11:33:30
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        おはよう
      </div>
    </div>
  </div>

  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        ミッキー
      </div>
      <div class="message-date">
        2022/6/24(Wed) 12:12:30
      </div>
    </div>
    <div class="lower-message">
